% ------------ Eintraege ------------
%\eintrag{Dauer}{Firma}{Ort}{Beschreibung ..... mehrzeilig}
\newcommand \eintragK [2]{%
	\cvitem[0.15em]{#1}{#2}
}

% ohne datumskorrektur
\newcommand \eintragKb [2]{%
	\cvitem[0.15em]{#1}{#2}
}

\newcommand* \datumsVKorrektur {-5mm}
\newcommand \eintragM [4]{%
	\ifx&#4&
		\eintragKK{#1}{\mdseries{#2}\normalfont}{#3}
	\else
		\eintragMM{#1}{\mdseries{#2}\normalfont}{#3}{\vspace{\datumsVKorrektur}#4}%
	\fi
}

%\eintrag{Dauer}{Firma}{JobTitel}{Ort}{Beschreibung ..... mehrzeilig}	- mit Aufzaehlungen
\newcommand \eintragL [5]{%
	{\if\relax\detokenize{#5}\relax
		\eintragLLb{#1}{\mdseries{#2}\normalfont}{\textit{#3}}{#4}
	\else
		\eintragLL{#1}{\mdseries{#2}\normalfont}{\textit{#3}}{#4}{\vspace{\datumsVKorrektur}#5}
	\fi}
}
%\eintrag{Dauer}{Firma}{JobTitel}{Ort}{Beschreibung ..... mehrzeilig}	- mehrzeiliger Text
\newcommand \eintragLb[5]{%
	\eintragL{#1}{#2}{#3}{#4}{#5\strut}
}

