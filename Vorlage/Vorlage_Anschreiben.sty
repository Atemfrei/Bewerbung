% ------------ Kopf ------------
\setkomavar{firsthead}{%
      \parbox[b]{\textwidth}{\raggedleft
        {\usekomafont{fromname}\strut\ignorespaces
        \huge{%
		\color{firstnamecolor}\vorname \ % Farbe Vorname übernehmen
		\color{familynamecolor}\nachname % Farbe Nachname übernehmen%
		}}%
        { \\[-.4\baselineskip]%
			\usekomafont{fromrule}{{\parbox{\textwidth}{\color{rulecolor}\rule{\textwidth}{1.3pt}}}}
			\usekomafont{fromaddress}\strut\ignorespaces
			\usekomavar{fromaddress}%
			\\\Mobilefone \usekomavar*{mobilphone} \usekomavar{mobilphone}%
			\\\Telefon \usekomavar*{fromphone} \usekomavar{fromphone}%
			\\\Faxmachine \usekomavar*{fromfax} \usekomavar{fromfax}%
			\\\Letter \usekomavar*{fromemail} \usekomavar{fromemail}%
          \\}%
      }%
}	
% ------------ Fuss ------------
\setkomavar{firstfoot}{%
	\vbox to 0pt{\vspace*{-4mm}\color{rulecolor}\rule{\textwidth}{0.7pt}}
}
